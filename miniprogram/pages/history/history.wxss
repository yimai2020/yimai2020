page{
  background: #edf0e6;
}

.change{
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  background-color: #fff;
  border-radius: 50rpx;
  width: 100rpx;
  height: 100rpx;
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 6px 10px rgba(19, 19, 19, 0.678);
}

.swiper-item {
  overflow: scroll;
}

.swiper-tab {
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 1rpx solid rgba(119, 119, 119, 0.089);
  background: #fff;
}
  
.tab-item {
  width: 33.3%;
  text-align: center;
  font-size: 29rpx;
  color: #777;
}
  
.swiper {
  height: 1100px;
}
  
.on {
  color:  #0a0a0a;
  font-size: 30rpx;
  border-bottom: 4rpx solid #f11629;
}

.history-background{
  width: 100%;
  display:flex;
  justify-content: center;
  z-index: -10;
  position: absolute;
}

.line{
  width: 5rpx;
  height: 10150rpx;
  top:20rpx;
  position: absolute;
} 

.title{
  position: relative;
  width: 350rpx;
  height: 40rpx;
  border:1px solid #d15913;
  border-radius: 10rpx;
  background: #d15913;
  display:flex;
  justify-content: center; 
}

.title-content-xianqin{
  width:350rpx;
  line-height: 40rpx;
  text-align: center;
  z-index: 10;
  font-weight: 700;
  letter-spacing:5rpx;
  font-size: 35rpx;
  color: white;
}

.detail{
  display: flex;
}

.left{
  position: relative;
  z-index: 0;
  margin-left: 20rpx;
  width: 310rpx;
  top:100rpx;
  animation: leftAnimation 1s ;
}

.left_content{
  position: absolute;
  font-size: 30rpx;
  width:270rpx;
  background: #fff;
  padding: 20rpx;
}
@keyframes leftAnimation {
  from {
      left:-200rpx
  }
  to {
      left:0
  }
}

.fix{
  position: relative;
  top:100rpx;
  width:75rpx;
}

.tri_left{
  position: absolute;
  left: -2rpx;
  width:15rpx;
  animation: leftAnimation 1s ;
}

.point{
  position: absolute;
  width:25rpx;
  left: 30rpx;
}

.tri_right{
  position: absolute;
  width:20rpx;
  right: -2rpx;
  animation: rightAnimation 1s ;
}

.right{
  position: relative;
  z-index: 0;
  width: 310rpx;
  top:300rpx;
  animation: rightAnimation 1s ;
}

.right_content{
  font-size: 30rpx;
  width:270rpx;
  background: #fff;
  padding: 20rpx;
}
@keyframes rightAnimation {
  from {
      right:-200rpx
  }
  to {
      right:0
  }
}

.sketch{
  position: relative;
  width: 100%;
  display:flex;
  justify-content: center; 
}

.sketch-content{
  position:relative;
  margin:30rpx;
  color:#fff;
  font-size:35rpx;
  background-color: #d3b47a;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  font-family: 'lishu';
}


<view  class="letter_collection" >
  <view class="letter_audio">
    <view class="letter">{{letter}}</view>
    <image wx:if='{{!onplay}}' src="https://6678-fxy-onc8b-1300849435.tcb.qcloud.la/word_audio/guangbo.png?sign=8eb9c9e1be77cd9e095b229c1a5e1a9a&t=1584865651" bindtap="playAudio" class="audio" mode='widthFix'></image>
    <image wx:if='{{onplay}}' src="https://6678-fxy-onc8b-1300849435.tcb.qcloud.la/word_audio/guangbo_play.png?sign=b54fd68fd229c88b66b104c975f48010&t=1584865670" bindtap="playAudio" class="audio" mode='widthFix'></image>
  </view>
  <view class="collection">
    <image catchtap='collectionIcon' wx:if='{{!isCollected}}' src="https://6678-fxy-onc8b-1300849435.tcb.qcloud.la/word/uncollected.png?sign=2b61e41ae0b739296585deaaeb25f2b2&t=1583640849"  mode='widthFix'  style="width: 100%;"></image>
    <image catchtap='collectionIcon' wx:if='{{isCollected}}' src="https://6678-fxy-onc8b-1300849435.tcb.qcloud.la/word/collected.png?sign=1d7d35b697518ec283e196ab9b5e5444&t=1583640875"  mode='widthFix'  style="width: 100%;"></image>
  </view>
</view>

<view style="margin-left:30rpx;margin-bottom:20rpx;">/{{pronunciation}}/</view>
<view style="margin-left:30rpx;margin-bottom:20rpx;">{{explain}}</view>
<van-divider />

<view style="margin:20rpx auto 30rpx 30rpx;font-weight:700;">图文例句</view>
<view class="sentence_yi">
  <view style="margin:10rpx auto 20rpx 30rpx;font-size:40rpx;font-weight:700;" class="sentence" >{{sentence_yi}}</view>
  <image wx:if='{{!onplay_sentence}}' src="https://6678-fxy-onc8b-1300849435.tcb.qcloud.la/word_audio/guangbo.png?sign=8eb9c9e1be77cd9e095b229c1a5e1a9a&t=1584865651" bindtap="playAudio_sentence" class="audio_sentence" mode='widthFix' style="width:50rpx;"></image>
  <image wx:if='{{onplay_sentence}}' src="https://6678-fxy-onc8b-1300849435.tcb.qcloud.la/word_audio/guangbo_play.png?sign=b54fd68fd229c88b66b104c975f48010&t=1584865670" bindtap="playAudio_sentence" class="audio_sentence" mode='widthFix' style="width:50rpx;"></image>
</view>

<view style="margin:10rpx auto 30rpx 30rpx;color: rgba(143, 143, 143, 0.993);">{{sentence_zhong}}</view>
<image src="{{image}}" mode='widthFix' style="width:300rpx; margin:20rpx;"></image>
<van-divider />
<button class='knew' catchtap='knewButtom' wx:if='{{!isKnew}}'>已认识</button>
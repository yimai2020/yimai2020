    color: white;
    font-size: 40rpx;
  }
  @keyframes twinkling {
    0% {
    opacity:0.2;
    filter:alpha(opacity=20);
    -webkit-transform:scale(1);
  }
  50% {
    opacity:1;
    filter:alpha(opacity=50);
    -webkit-transform:scale(1.12);
  }
  100% {
    opacity:0.2;
    filter:alpha(opacity=20);
    -webkit-transform:scale(1);
  }

<view wx:for="{{videoList}}" wx:key="index" class="card">
  <video
    display:block
    id="{{item._id}}"
    src="{{item.url}}"
    binderror="videoErrorCallback"
    bindplay="bindPlay"
    bindtimeupdate="bindTime"
    danmu-list="{{danmuList}}"
    show-center-play-btn='{{false}}'
    show-play-btn="{{true}}"
    controls
    title="{{item.title}}"
    class="video"
    style="width:90%;"
    data-item="{{item}}"
  ></video>
  <view class="column">
    <view class="title">{{item.title}}</view>
    <view class="laiyuan">来源：{{item.laiyuan}}</view>
  </view>
</view>


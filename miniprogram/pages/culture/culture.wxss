.button{
  margin: 10rpx;
  color: #f6f6f6;
  height: 300rpx;
  font-size: 40rpx;
  letter-spacing:10rpx;
  display: flex;
  border-radius: 20rpx;
  margin: 18rpx;
  box-shadow: 0 8rpx 12rpx 4rpx #666;
}

.content{
  align-self: flex-start;
  line-height: 70rpx;
  text-align:center;
  font-size: 65rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top:30rpx; 
}

.button-hover {
  position: relative;
  top: 2rpx;
  left: 2rpx;
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1) inset;
}
